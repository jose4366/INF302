<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CambiaColores.MainPage">
    <Grid
        Padding="10,0"
        x:Name="Pagina"
        RowDefinitions="*,*,*,Auto,Auto, Auto"
        ColumnDefinitions=" *, Auto, *"
        BackgroundColor="#FF5E5D5E">
        <Slider x:Name="redSlider" Minimum="0" Maximum="255" ValueChanged="Slider_ValueChanged" VerticalOptions="Center" Grid.Row="0" Grid.ColumnSpan="3" />
        <Slider x:Name="greenSlider" Minimum="0" Maximum="255" ValueChanged="Slider_ValueChanged" VerticalOptions="Center" Grid.Row="1" Grid.ColumnSpan="3" />
        <Slider x:Name="blueSlider" Minimum="0" Maximum="255" ValueChanged="Slider_ValueChanged" VerticalOptions="Center" Grid.Row="2" Grid.ColumnSpan="3"/>
        <Label x:Name="rgbValueLabel" Text="RGB: (0,0,0)" HorizontalOptions="Center" Grid.Row="3" Grid.ColumnSpan="2"/>
        <Button Text="Copiar Color" Clicked="Clipboard_Clicked" Grid.Row="3" Grid.Column="2"/>
        <Button Text="ColorAleatorio" Clicked="RandomButton_Clicked" Grid.Row="4" Grid.Column="1"/>
        <Button Text="CambiarColor" Clicked="OnChangeBackground" VerticalOptions="End" Grid.Row="5" Grid.Column="1"/>
    </Grid>


</ContentPage>
